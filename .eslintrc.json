{
    "parserOptions": {
        "sourceType": "script"
    },
    "extends": "airbnb-base",
    "globals": {
        "window": false,
        "document": false,
        "XMLHttpRequest": false,
        "mdc": false,
        "Rails": false,
        "I18n": false
    },
    "rules": {
        "func-names": [
            "warn", "as-needed"
        ],
        "function-paren-newline": [
            "error", "consistent"
        ],
        "no-restricted-syntax": [
            "off", { "selector": "ForOfStatement" }
        ],
        "no-underscore-dangle": [
            "error", { "allowAfterThis": true }
        ],
        "no-unused-vars": [
            "error", { "args": "none" }
        ]
    }
}
