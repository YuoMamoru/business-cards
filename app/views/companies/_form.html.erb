<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :short_name %>
    <%= form.text_field :short_name %>
  </div>

  <div class="field">
    <%= form.label :kana_name %>
    <%= form.text_field :kana_name %>
  </div>

  <div class="field">
    <%= form.label :en_name %>
    <%= form.text_field :en_name %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category, Company.categories.keys.to_a %>
  </div>

  <div class="field">
    <%= form.label :category_position %>
    <%= form.select :category_position, Company.category_positions.keys.to_a %>
  </div>

  <div class="field">
    <%= form.label :logo_image %>
    <%= form.file_field :logo_image_data, accept: "image/png, image/jpeg, image/gif" %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_field :note %>
  </div>

  <div class="field">
    <%= form.label :web_site %>
    <%= form.text_field :web_site %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
